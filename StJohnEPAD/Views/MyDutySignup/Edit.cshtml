@model StJohnEPAD.Models.DutyAvailability

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Upcoming Duties</legend>

        @Html.HiddenFor(model => model.DutyAvailabilityID)

        <div class="editor-label">
            @Html.LabelFor(model => model.DutyID, "Duty")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DutyID", String.Empty)
            @Html.ValidationMessageFor(model => model.DutyID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DutyAvailabilityResponse)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DutyAvailabilityResponse)
            @Html.ValidationMessageFor(model => model.DutyAvailabilityResponse)
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
