@model StJohnEPAD.Models.Equipment

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Equipment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Equipment</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentName)
            @Html.ValidationMessageFor(model => model.EquipmentName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentLastCheck)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentLastCheck)
            @Html.ValidationMessageFor(model => model.EquipmentLastCheck)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentNextCheck)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentNextCheck)
            @Html.ValidationMessageFor(model => model.EquipmentNextCheck)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentDescription)
            @Html.ValidationMessageFor(model => model.EquipmentDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentNotes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentNotes)
            @Html.ValidationMessageFor(model => model.EquipmentNotes)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentCheckInDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentCheckInDate)
            @Html.ValidationMessageFor(model => model.EquipmentCheckInDate)
