@model IEnumerable<StJohnEPAD.Models.ConfirmedDutyHours>

@{
    ViewBag.Title = "Confirmed Duty Hours by Member";
}

<h2 class="StJohnHeader">@ViewBag.TItle</h2>
<p>

</p>

<table id="DutyByUser">
    <thead>
        <tr>
            <th>Duty ID</th>
            <th>Duty Name</th>
            <th>Hours</th>
            <th>Comments</th>
        </tr>
    </thead>
    <tbody>
@{
    foreach(var item in Model)
    {
        <tr>
            <td>@item.DutyID</td>
            <td>@item.Duty.DutyName</td>
            <td>@item.DutyHourAmount</td>
            <td>@item.DutyHourComments</td>
        </tr>
            
    }
}
        </tbody>
    </table>

